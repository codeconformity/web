/* Bootstrap overrides
-------------------------------------------------- */

.navbar-header {
  padding: 19px;
  border-bottom: 1px solid rgba(255,255,255,0.1);
}
.navbar-brand {
  display: block;
  width: 42px;
  height: 42px;
  margin: 0;
  padding: 0;
  background-image: url(<%= image_path 'codeconformity.png' %>);
  background-size: 42px;
}
.navbar-fixed-left .navbar-nav > li > a > .glyphicon {
  display: block;
  width: 24px;
  height: 24px;
  margin: 0 auto;
  font-size: 24px;
}

.page-header {
  height: 80px;
  margin: 0;
  padding: 0;
}
.page-header h1 {
  margin: 0;
  padding: 23px 0;
  font-size: 32px;
  font-weight: 300;
  color: #95a5a6;
}
